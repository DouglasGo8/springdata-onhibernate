<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="chapter03.metamodel" transaction-type="RESOURCE_LOCAL">

    <class>com.manning.springdata.hibernate.chapter03.metamodel.Item</class>

    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/prospringdb"/>
      <property name="javax.persistence.jdbc.user" value="guest"/>
      <property name="javax.persistence.jdbc.password" value="welcome1"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>

      <property name="hibernate.hbm2ddl.auto" value="create"/>

    </properties>



  </persistence-unit>

</persistence>